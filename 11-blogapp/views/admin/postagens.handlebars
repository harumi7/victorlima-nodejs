<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h1>{{titulo}}</h1>
            <span>Slug: {{slug}}</span><br>
            <span>Descrição: {{descricao}}</span><br>
            <span>Data: {{data}}</span><br>
            <span>Conteúdo: {{conteudo}}</span><br>
            <span>Categoria: {{categoria.nome}}</span><br>

            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <span>Nenhuma postagem registrada!</span>
{{/each}}